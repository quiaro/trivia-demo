{
  "extends": ["standard", "prettier", "prettier/react", "prettier/standard"],
  "plugins": ["prettier", "react", "standard"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": false,
        "jsxBracketSameLine": true,
        "proseWrap": "always",
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}
